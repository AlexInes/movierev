<h1>Editting <%= @movie.title %></h1>

<%= form_with(model: @movie) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.label :total_gross %>
  <%= f.number_field :total_gross %>

  <%= f.label :release_date %>
  <%= f.datetime_select :release_date, {ampm: true}, {class:"datetime"} %>

  <%= f.label :directed_by %>
  <%= f.text_field :directed_by %>

  <%= f.label :running_time %>
  <%= f.number_field :running_time, step: 1.0 %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :overview %>
  <%= f.text_area :overview, rows: 5 %>

  <%= f.submit %>

<% end %>
